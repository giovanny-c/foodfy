{% extends "layout-admin.njk" %}

{% block head %}
    <title>Foodfy Admin - {{recipe.title}}</title>
    <link rel="stylesheet" href="/styles-admin-recipe.css">
    
{% endblock %}

{% block content %}

    <div class="content">
        
        <div id="recipe-title">

            <p>Receita: {{recipe.title}}</p>
            
            
            <span><a href="/admin/recipes/{{recipe.id}}/edit">Editar receita</a></span>

        </div>

        <div class="recipe-image">

            <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">

        </div>

        

            <div class="title">

                
                {{recipe.title}}

            </div>


            <div class="author">

                por: {{recipe.author}}.
                
            </div>

            <div class="subtitle">

                <div class="grid">
                    
                    <p class="s1">Ingredientes.</p>
                    
                    <div class="toggle">
                        <p>Esconder</p>
                    </div>
                    
                </div>        
                    
                <div class="recipe-info">
                    
                    

                    <div class="info">

                        <ul>

                            {% for ingredient in recipe.ingredients %}
                            

                            <li>{{ingredient}}</li>
                            
                            
                            {% endfor %}
                        
                        </ul>

                    </div>

                </div>
                    

                
                

            </div>

            <div class="subtitle">

                <div class="grid">

                    <p class="s1">Modo de preparo.</p>
                    
                    <div class="toggle">
                        <p>Esconder</p>
                    </div>
                </div>    
                
                <div class="recipe-info">
                    
                    

                    <div class="info">

                        <ul>
                            {% for step in recipe.preparation %}
                            
                                <li>{{step}}</li>

                            {% endfor %}   
                        </ul>
                    
                    </div>
                    
                </div>
                
                

            </div>

            <div class="subtitle">

                <div class="grid">
                    <p class="s1">Informa√ßoes adicionais.</p>
                    
                    <div class="toggle">
                        <p>Esconder</p>
                    </div>
                </div>

                <div class="recipe-info">

                    <div class="info">
                        <p>{{recipe.information}}</p>
                    </div>

                </div>

                

            </div>

    </div>


    <script src="/scripts/scripts.js"></script>
    
{% endblock %}
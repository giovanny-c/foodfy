{% extends "layout-login.njk" %}

{% block head %}
    <title>Foodfy - Reset Password</title>
    
    
{% endblock %}

{% block content %}

    <div class="title">Nova Senha</div>

    <div class="section">             

        <form id="reset" method="POST" action="/reset-password">


                <div class="item">

                    <div>Email</div>

                    <div>
                    <input 
                        type="email" 
                        name="email" 
                        placeholder="Digite seu email" 
                        required/>
                    </div>

                </div>

                
                <div class="item">

                    <div>Nova Senha</div>

                    <div>
                    <input 
                        type="password" 
                        name="password"
                        placeholder="Digite sua senha"  
                        required/>
                    </div>

                </div>

                <div class="item">

                    <div>Repetir Senha</div>

                    <div>
                    <input 
                        type="password" 
                        name="password"
                        placeholder="Repita sua senha"  
                        required/>
                    </div>

                </div>


                <div>

                    <div></div>
    
                    <button type="submit">Nova Senha</button>
                
                </div>
        
        </form>

    </div>      
    
{% endblock %}
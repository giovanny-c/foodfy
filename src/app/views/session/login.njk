{% extends "layout-login.njk" %}

{% block head %}
    <title>Foodfy - Login</title>
    
    
{% endblock %}

{% block content %}

    <div class="title">Iniciar Sess√£o</div>

    <div class="section">             

        <form id="login" method="POST" action="/login">


                <div class="item">

                    <div>Email</div>

                    <div>
                    <input 
                    {% if error and email%}
                        class="input-error"
                    {% endif %}
                        type="email" 
                        name="email" 
                        placeholder="Digite seu email" 
                        value="{{user.email}}"
                        />
                    </div>

                </div>

                
                <div class="item">

                    <div>Senha</div>

                    <div>
                    <input 
                    {% if error and password%}
                        class="input-error"
                    {% endif %}
                        type="password" 
                        name="password"
                        placeholder="Digite sua senha"  
                        />
                    </div>

                </div>


                <div>

                    <a href="/forgot">Perdeu a senha?</a>
    
                    <button type="submit">Acessar</button>
                
                </div>
        
        </form>

    </div>      
    
{% endblock %}
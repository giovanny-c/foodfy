<div class="item-group">



<div class="item user">

    <div>Nome</div>

    <div>
    <input
        {% if error and name%}
            class="input-error"
        {% endif %} 
        type="text" name="name" value="{{user.name}}" />
    </div>

</div>



<div class="item user">

    <div>Email</div>

    <div>
    <input 
        {% if error and email%}
            class="input-error"
        {% endif %} 
        type="email" name="email" value="{{user.email}}" />
    </div>

</div>
</div>


<div class="item user">

    <div>Senha</div>

    <div>
    <input 
        {% if error and password%}
            class="input-error"
        {% endif %} 
        type="password" name="password" />
    </div>

</div>
</div>



    
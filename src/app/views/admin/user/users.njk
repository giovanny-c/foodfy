{% extends "layout-admin.njk" %}

{% block head %}
    <title>Foodfy Admin - Usuários</title>
    

{% endblock %}


{% block content %}

        <div id="title">

            <div>
                Usuários
            </div>

            <div class="button ">
                <a href="/admin/users/create">Novo Usuário</a>
            </div>
        
        </div>

        <div class="chefs-grid">

            {% for chef in chefs %}
 

            <div class="chef" >

                <div class="chef-image">

                    <img src="{{chef.image}}" alt="Imagem de {{chef.title}}">
                
                </div>
                
                <div class="info">

                    <div class="name">{{chef.name}}</div>

                    <div class="visualize">
                    
                    <a href="/admin/chefs/{{chef.id}}">Visualiazar</a>    
                        
                    </div>
                    
                        
                
                </div>

            </div>

            {% endfor %}

        </div>


{% endblock %}
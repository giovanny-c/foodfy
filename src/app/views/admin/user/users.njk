{% extends "layout-admin.njk" %}

{% block head %}
    <title>Foodfy Admin - Usuários</title>
    

{% endblock %}


{% block content %}

        <div id="title">

            <div>
                Usuários
            </div>

            <div class="button ">
                <a href="/admin/users/create">Novo Usuário</a>
            </div>
        
        </div>

        <div class="users-grid">

            {% for user in users %}
 

            <div class="user-box" >

               
                
                <div class="info">

                    <div class="name">{{user.name}}</div>

                    <div class="email">{{user.email}}</div>



                    <div class="visualize">
                    
                    <a href="/admin/users/{{user.id}}/edit">Editar</a>

                    <a href="/admin/users/{{user.id}}/edit">Remover</a>        

                    </div>
                    
                        
                
                </div>

            </div>

            {% endfor %}

        </div>


{% endblock %}
{% extends "layout-admin.njk" %}

{% block head %}
    <title>Foodfy Admin - Usuários</title>
    

{% endblock %}


{% block content %}

        <div id="title">

            <div>
                Usuários
            </div>

            <div class="button ">
                <a href="/admin/users/create">Novo Usuário</a>
            </div>
        
        </div>

        <div class="users-grid">

            {% for user in users %}
 

            <div class="user-box" >

                <div class="user-image">

                    <img src="{{user.image}}" alt="Imagem de {{user.title}}">
                
                </div>
                
                <div class="info">

                    <div class="name">{{user.name}}</div>

                    <div class="visualize">
                    
                    <a href="/admin/users/{{user.id}}">Visualiazar</a>    
                        
                    </div>
                    
                        
                
                </div>

            </div>

            {% endfor %}

        </div>


{% endblock %}
{% extends "layout-admin.njk" %}

{% block head %}
    <title>Foodfy Admin - {{chef.name}}</title>
    
    
{% endblock %}

{% block content %}

    <div class="content">
        
        <div id="chef-title">

            <p>Chef: {{chef.name}}</p>
            
            
            <span><a href="/admin/chefs/{{chef.id}}/edit">Editar chef</a></span>

        </div>

        <div class="chef-image">

            <img src="{{image.src}}" alt="Imagem de {{chef.name}}">

        </div>

        

            <div class="title">

                
                {{chef.name}}

            </div>


            <div class="recipes-count">

                {% if chef.recipes == 1%}
                    
                    {{chef.recipes}} receita

                {% else %}

                    {{chef.recipes}} receitas

                {% endif %}
                
            </div>

            

            <div class="recipes">Receitas</div>

            <div class="chef-recipes-grid">


            {% for recipe in recipes %}
 

            <div class="chef-recipe" >

                <div class="recipe-image">

                    <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
                
                </div>
                
                <div class="chef-info">

                    <div class="chef-name">{{recipe.name}}</div>

                    <div class="chef-author">{{chef.name}}</div>

                    <div class="visualize"><a href="/admin/recipes/{{recipe.id}}">Visualizar</a></div>
                
                </div>

            </div>

            {% endfor %}

        </div>


    <script src="/scripts/scripts.js"></script>
    
{% endblock %}